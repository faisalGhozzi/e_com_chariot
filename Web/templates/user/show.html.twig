{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="col order-last text-right">
                <a class="btn btn-outline-primary" href="{{ path('app_user_index') }}"><i class="fa fa-arrow-left"></i> Retourner a la list</a>
                <a class="btn btn-outline-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa fa-pen"></i>Modifier</a>
            </div>
            <div class="col">
                {{ include('user/_delete_form.html.twig') }}
            </div>
            <div class="col order-first">
                <h1 class="h3 mb-2 text-gray-800">Profile de {{ user.nom }}</h1>
            </div>

        </div>
    </div>
    <br>
    <br>
    <br>
<div class="row justify-content-center">

    <div class="col-lg-6">

        <!-- Default Card Example -->
        <div class="card mb-4">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>

                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
